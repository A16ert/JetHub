<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/mobile_navigation"
  app:startDestination="@id/mainTabFragment"
  >

  <fragment
    android:id="@+id/mainTabFragment"
    android:name="com.takusemba.jethub.ui.fragment.MainTabFragment"
    android:label="MainTabFragment"
    >
    <action
      android:id="@+id/action_main_tab_to_repositoryFragment"
      app:destination="@id/repoDetailFragment"
      />
    <action
      android:id="@+id/action_main_tab_to_userFragment"
      app:destination="@id/userDetailFragment"
      />
  </fragment>
  <fragment
    android:id="@+id/repoDetailFragment"
    android:name="com.takusemba.jethub.ui.fragment.RepoDetailFragment"
    android:label="RepoDetailFragment"
    />
  <fragment
    android:id="@+id/userDetailFragment"
    android:name="com.takusemba.jethub.ui.fragment.UserDetailFragment"
    android:label="UserDetailFragment"
    />


</navigation>